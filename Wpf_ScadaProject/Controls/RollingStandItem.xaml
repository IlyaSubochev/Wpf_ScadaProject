<UserControl x:Class="Wpf_ScadaProject.Controls.RollingStandItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_ScadaProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="80">
    <UniformGrid Rows="2" >
        <Ellipse x:Name="upperRoll" Width="50" Height="50" VerticalAlignment="Top"
                 Fill="{Binding}">
            
        </Ellipse>
        <Ellipse x:Name="lowerRoll" Width="50" Height="50" VerticalAlignment="Bottom"
                 Fill="Green">
            
        </Ellipse>
    </UniformGrid>
</UserControl>
